                                        <th>Dispon√≠vel</th>
                                        <th>A√ß√µes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% pratos.forEach(prato => { %>
                                        <tr>
                                            <td>
                                                <% if (prato.imagem) { %>
                                                    <img src="/uploads/<%= prato.imagem %>" alt="<%= prato.nome %>" 
                                                         style="max-width: 80px; height: auto;" 
                                                         class="img-thumbnail shadow-sm">
                                                <% } else { %>
                                                    <img src="/img/no-image.png" alt="Sem imagem" 
