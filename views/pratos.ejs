                                                    'Italiana': 'üçù',
                                                    'Japonesa': 'üç±',
                                                    'Chinesa': 'ü•¢',
                                                    '√Årabe': 'ü•ô',
                                                    'Mexicana': 'üåÆ',
                                                    'Marmitas': 'ü•°',
                                                    'Vegetariana': 'ü•ó',
                                                    'Fit': 'üí™',
                                                    'A√ßa√≠': 'üçá',
                                                    'Padaria': 'ü•ñ',
                                                    'Pastel': 'ü•ü',
                                                    'Sorvetes': 'üç®',
                                                    'Espetinhos': 'üçñ',
                                                    'Bebidas': 'ü•§',
                                                    'Por√ß√µes': 'üçü',
