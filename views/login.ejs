<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Lanchonete Bot</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.6/jquery.inputmask.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .login-container {
            background: white;
            border-radius: 7%;
            box-shadow: 0 9px 19px rgb(0 0 0 / 35%);
            width: 100%;
            max-width: 400px;
            padding: 40px 30px;
            text-align: center;
        }

        .login-logo {
            width: 100px;
            height: 100px;
            background: #ea1d2c;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0 auto 30px;
            color: white;
            font-size: 48px;
        }

        .login-title {
            color: #333;
            margin-bottom: 30px;
            font-size: 24px;
            font-weight: 600;
        }

        .input-container {
            position: relative;
            margin-bottom: 20px;
        }

        .input-container i:not(.toggle-password) {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #888;
        }

        .input-container .toggle-password {
            position: absolute;
            right: -35px;
            top: 50%;
            transform: translateY(-50%);
            color: #888;
            cursor: pointer;
            transition: color 0.3s ease;
            padding: 10px;
            z-index: 2;
        }

        .input-container .toggle-password:hover {
            color: #666;
        }

        .login-input {
            width: 100%;
            padding: 15px 15px 15px 45px;
            border: 1px solid #ddd;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
            -moz-appearance: textfield;
        }

        .login-input[type="password"] {
            padding-right: 15px;
        }

        .login-input::-webkit-outer-spin-button,
        .login-input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .login-input:focus {
            outline: none;
            border-color: #4CAF50;
            box-shadow: 0 0 0 2px rgba(76, 175, 80, 0.2);
        }

        .login-btn {
            width: 100%;
            padding: 15px;
            background-color: #ea1d2c;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .login-btn:hover {
            background-color: #ea1d2c;
        }

        .login-footer {
            margin-top: 20px;
            color: #666;
            font-size: 14px;
        }

        .error-message {
            color: #f44336;
            margin-bottom: 15px;
            font-size: 14px;
        }

        .garcom-link {
            display: block;
            margin-top: 15px;
            color: #ea1d2c;
            text-decoration: none;
            font-size: 14px;
        }

        .garcom-link:hover {
            text-decoration: underline;
        }

        /* Modal de Login do Garçom */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
        }

        .modal-content {
            position: relative;
            background-color: white;
            margin: 15% auto;
            padding: 20px;
            width: 90%;
            max-width: 400px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .close-modal {
            position: absolute;
            right: 20px;
            top: 10px;
            font-size: 24px;
            cursor: pointer;
            color: #666;
        }

        .close-modal:hover {
            color: #333;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-logo">
            <i class="fa-solid fa-burger"></i>
        </div>
        <h2 class="login-title">Lanchonete Bot</h2>
        
        <% if (erro) { %>
            <div class="error-message"><%= erro %></div>
        <% } %>

        <form action="/login" method="POST" id="loginForm" onsubmit="return prepararEnvio(event)">
            <div class="input-container">
                <i class="fa-solid fa-phone"></i>
                <input type="tel" 
                       class="login-input" 
                       name="username_display" 
                       id="telefone" 
                       required 
                       placeholder="(00)00000-0000"
                       pattern="\([0-9]{2}\)[0-9]{5}-[0-9]{4}"
                       inputmode="numeric"
                       maxlength="14">
                <input type="hidden" name="username" id="username_hidden">
            </div>

            <div class="input-container">
                <i class="fa-solid fa-key"></i>
                <input type="password" 
                       class="login-input" 
                       name="password" 
                       id="senha" 
                       required 
                       placeholder="Senha">
                <i class="fa-solid fa-eye toggle-password" onclick="togglePassword()"></i>
            </div>

            <button type="submit" class="login-btn">Entrar</button>
        </form>

        <div class="login-footer">
            <a href="/register">Não tem uma conta? Cadastre-se</a>
        </div>

        <a href="#" class="garcom-link" onclick="abrirModalGarcom()">Sou Garçom</a>
    </div>

    <!-- Modal de Login do Garçom -->
    <div id="modalGarcom" class="modal">
        <div class="modal-content">
            <span class="close-modal" onclick="fecharModalGarcom()">&times;</span>
            <h2 style="text-align: center; margin-bottom: 20px;">Login do Garçom</h2>
            
            <form action="/login/garcom" method="POST">
                <div class="input-container">
                    <i class="fa-solid fa-user-tie"></i>
                    <input type="text" class="login-input" name="codigo_acesso" required placeholder="Código de Acesso">
                </div>

                <button type="submit" class="login-btn">Entrar como Garçom</button>
            </form>
        </div>
    </div>

    <script>
        // Máscara para o telefone
        document.getElementById('telefone').addEventListener('input', function (e) {
            let x = e.target.value.replace(/\D/g, '').match(/(\d{0,2})(\d{0,5})(\d{0,4})/);
            e.target.value = !x[2] ? x[1] : '(' + x[1] + ')' + x[2] + (x[3] ? '-' + x[3] : '');
        });

        // Função para preparar o envio do formulário
        function prepararEnvio(e) {
            const telefoneInput = document.getElementById('telefone');
            const usernameHidden = document.getElementById('username_hidden');
            const telefoneNumeros = telefoneInput.value.replace(/\D/g, '');

            if (telefoneNumeros.length !== 11) {
                alert('Por favor, insira um número de telefone válido com DDD no formato (00)00000-0000');
                return false;
            }

            // Atualiza o campo hidden com apenas os números
            usernameHidden.value = telefoneNumeros;
            return true;
        }

        function abrirModalGarcom() {
            document.getElementById('modalGarcom').style.display = 'block';
        }

        function fecharModalGarcom() {
            document.getElementById('modalGarcom').style.display = 'none';
        }

        // Fechar modal quando clicar fora dele
        window.onclick = function(event) {
            const modal = document.getElementById('modalGarcom');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        // Função para mostrar/ocultar senha
        function togglePassword() {
            const senhaInput = document.getElementById('senha');
            const toggleIcon = document.querySelector('.toggle-password');
            
            if (senhaInput.type === 'password') {
                senhaInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                senhaInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
</body>
</html>
